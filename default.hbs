    {{> redirect-js}}
    {{> dark-mode-js}}
</head>
<body class="{{body_class}} body-context">
<header>
    {{{block "header"}}}
</header>

{{{body}}}
{{!-- All content gets inserted here, index.hbs, post.hbs, etc --}}

{{> footer}}

{{> local-date-js}}
{{> local-search-modal}}

{{ghost_foot}}
